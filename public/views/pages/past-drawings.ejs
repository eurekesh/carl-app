<%- include('../components/head') %>
            <link href="/res/stylesheets/navBar.css" rel="stylesheet">
            <link href="res/stylesheets/pastDrawings.css" rel="stylesheet">
            <title>Past Drawings</title>
            <style>
              body {
                  background-color: #1a1c20;
                  background-size: 100% 100%;
              }
          </style>
  </head>
    <body>

      <%- include('../components/menu') %>
      <br><br>
      <div class="myHeading">
        <h1 >Previous Drawings</h1>
      </div>

      <div class="container">
        <%
                if (allcanvases) {
                  var imgs = '';
                  allcanvases.forEach(function(item){
                    var imgsrc= item.img_64bitcode;
                    imgs += '<div class="card mt-3 ml-3" style="width: 350px;height:350px;display:inline-block;">' +
                            '<img class="card-img-top" src="' + imgsrc + '" alt="a past canvas" style="width: 350px;height:350px;display:inline-block;" />' +
                            '<div class="card-body>' +
                            '<h5 class="card-title" style="text-align: center">' + item.noun + '</h5>' +
                            '</div>' +
                            '</div>';

                  }); %>
        <%- imgs %>
        <% } %>
      </div>
    </body>
</html>
